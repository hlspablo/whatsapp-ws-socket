{
  "name": "whatsapp-ws-server",
  "version": "1.0.0",
  "description": "Centralized WhatsApp WebSocket Server using Baileys",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "watch:build": "tsc -w",
    "watch:serve": "nodemon --watch dist --ext js --delay 100ms dist/server.js",
    "dev": "concurrently -k -r -n BUILD,START -c yellow,cyan \"npm:watch:build\" \"npm:watch:serve\"",
    "test": "node test-client.js"
  },
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@types/pg": "^8.15.5",
    "@types/qrcode": "^1.5.5",
    "@whiskeysockets/baileys": "^6.7.19",
    "audio-decode": "^2.2.3",
    "dotenv": "^17.2.2",
    "fluent-ffmpeg": "^2.1.3",
    "jimp": "^1.6.0",
    "node-cache": "^5.1.2",
    "pg": "^8.16.3",
    "pino": "^8.19.0",
    "qrcode": "^1.5.4",
    "uuid": "^10.0.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/fluent-ffmpeg": "^2.1.26",
    "@types/node": "^20.11.19",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.5.10",
    "concurrently": "^9.0.1",
    "nodemon": "^3.1.4",
    "pino-pretty": "^13.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
